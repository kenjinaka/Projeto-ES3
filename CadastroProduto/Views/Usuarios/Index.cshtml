@model IEnumerable<CadastroProduto.Models.Domain.Usuario>

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>
<p>Lista de usuários </p>


<table class=" table table-striped table-hover">
    <thread>
        <tr class="warning">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>   

        </trclass="info">
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary">Alterar</a>|
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-info">Detalhes</a>|
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>
