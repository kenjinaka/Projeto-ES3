@model CadastroProduto.Models.ViewModels.AcessorioBasicoFormViewModel

@{
    ViewData["Title"] = "Create";
}

    <form asp-action="Sair">
        <h2>Se desejar Finalizar o cadastro clique aqui</h2>

        <div class="form-group">
            <input type="submit" value=" FINALIZAR" class="btn btn-info" />
        </div>
    </form>

<h2>Ou Cadastre um novo Acessório BÁSICO</h2>

<h4>Digite os dados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Acessorio.Nome" class="control-label"></label>
                <input asp-for="Acessorio.Nome" class="form-control" />
                <span asp-validation-for="Acessorio.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acessorio.Codigo" class="control-label"></label>
                <input asp-for="Acessorio.Codigo" class="form-control" />
                <span asp-validation-for="Acessorio.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acessorio.Descricao" class="control-label"></label>
                <input asp-for="Acessorio.Descricao" class="form-control" />
                <span asp-validation-for="Acessorio.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acessorio.Quantidade" class="control-label"></label>
                <input asp-for="Acessorio.Quantidade" class="form-control" />
                <span asp-validation-for="Acessorio.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acessorio.Valor" class="control-label"></label>
                <input asp-for="Acessorio.Valor" class="form-control" />
                <span asp-validation-for="Acessorio.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Acessorio.Basico" /> @Html.DisplayNameFor(model => model.Acessorio.Basico)
                    </label>
                </div>
                </div>
                <div class="form-group">
                    <label asp-for="Acessorio.LinhaId" class="control-label"></label>
                    <select asp-for="Acessorio.LinhaId" asp-items="@(new SelectList(Model.Linhas,"Id","Nome"))" class="form-control"></select>
                </div>

                <div class="form-group">

                    <input type="submit" value="Continuar" class="btn btn-success" />
                </div>
        </form>        
        
    </div>
</div>



