
@model CadastroProduto.Models.Domain.Usuario

@{ ViewData["Title"] = "Home"; }
    
   
        <div class="row">
            <div class="col-sm-offset-5">

                
                <form class="jumbotron"  asp-action="Login">
                    <fieldset>
                    <h2>Login</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input type="password" asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Entrar" class="btn btn-success btn-sm"
                    </fieldset>
                </form>

                <h4>
                    <br/>
                    Ainda não tem conta?
                    <a class="btn btn-info btn-xs" asp-action="Create">Cadastre-se</a>
                </h4>
            </div>
        </div>


