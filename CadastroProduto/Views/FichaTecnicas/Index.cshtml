@model IEnumerable<CadastroProduto.Models.Domain.FichaTecnica>
@{
    ViewData["Title"] = "Ficha Técnica";
}

<h2>@ViewData["Title"]</h2>
<p>Fichas Técnicas cadastradas</p>
<p>
    <a asp-action="Consultar" class="btn btn-success">Consultar</a>
</p>


<table class="table table-striped table-hover">
    <thread>
        <tr class="success">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>

            <th></th>
            

        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary">Alterar</a>|
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-info">Detalhes</a>
                
            </td>
        </tr>
        }
    </tbody>
</table>
